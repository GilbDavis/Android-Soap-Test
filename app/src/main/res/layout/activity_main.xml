    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Stock:"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/nStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Precio:"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/nPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
